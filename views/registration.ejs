<%- include('./header'); %>
    <script src="https://www.google.com/recaptcha/api.js?render=6LfZUbcgAAAAAE9GM7z7fYYNO0nsXczoI3cFaJir"></script>

    <section class="form-section">
        <form action="reg" method="post">

            <div class="form-section__inputs">
                <label for="">Электронная почта</label>
                <input class="input-default text-input" type="email" name="email">
                <% if (locals.error) { %>
                    <div class="error-message">
                        <%=error%>
                    </div>
                    <%}%>

                        <label for="">Логин</label>
                        <input class="input-default text-input" type="text" name="login" minlength="2">
                        <label for="">Пароль</label>
                        <input class="input-default text-input" type="password" name="password" autocomplete="off" minlength="8">
                        <input class="input-default submit-input" type="submit" value="Регистрация">
            </div>
            <a href="/login">Войти</a>
        </form>
    </section>
    <%- include('./footer'); %>